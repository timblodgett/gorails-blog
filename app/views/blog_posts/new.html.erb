<h1>New Blog Post</h1>

<%= form_with model: @blog_post do |form|%>
  <div>
    <div><%= form.label :title %></div>
    <div><%= form.text_field :title %></div>
  </div>

  <br/>

  <div>
    <div><%= form.label :body %></div>
    <div><%= form.text_area :body %></div>
  </div>

  <br/>

  <div>
    <%= form.button %>
  </div>
<% end %>
